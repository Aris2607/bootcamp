<h1 class="text-center my-3">Contacts List</h1>

<div class="table-responsive">
  <table class="table mx-auto mt-5 table-striped table-hover w-50 text-center">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <tbody>
      <% let i = 1; %> <% if(contacts.length == 0) { %>
      <td colspan="3" class="text-center text-danger">Data Kontak Kosong</td>
      <% } else {%> <% contacts.forEach(contact => { %>
      <tr>
        <td><%= i %></td>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
      </tr>
      <% i++ %> <% })} %>
    </tbody>
  </table>
</div>
